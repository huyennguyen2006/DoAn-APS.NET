@using ShopOnline.Areas.Admin.Models
@model List<ProductCategoryModel>

<div class="row form-group" style="padding-top: 1rem;">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-5">
                    Danh mục sản phẩm
                </div>
                <div class="col-md-3">
                    @using (Html.BeginForm())
                    {
                        <div class="input-group custom-search-form">
                            <input type="text" name="keySearch" class="form-control" placeholder="Search...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    }
                </div>
                
                <div class="col-md-3">
                    <a href="@Url.Action("AddCategory")" class="btn btn-danger">Thêm danh mục sản phẩm</a>
                </div>
            </div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên danh mục</th>
                            <th>Ảnh</th>
                            <th>Người tạo</th>
                            <th>Ngày tạo</th>
                            <th>Người sửa</th>
                            <th>Ngày sửa</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td><img src="@item.ImagePath" class="img-thumbnail" style="width: 50px; height: 50px;"/></td>
                                <td>@item.CreatedBy</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.ModifiedBy</td>
                                <td>@item.ModifiedDate</td>
                                <td>@(item.Status ? "Hoạt động" : "Không hoạt động")</td>
                                <td>
                                    <a href="@Url.Action("EditCategory", new { id = item.Id })" class="btn btn-primary"><i class="fa fa-edit" title="Sửa"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
</div>


