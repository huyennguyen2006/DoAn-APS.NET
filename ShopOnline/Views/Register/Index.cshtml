@using ShopOnline.Models
@model RegisterModel

@{
    ViewBag.Title = "Index";
}

<div class="container register-container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            @using (Html.BeginForm("Index", "Register", FormMethod.Post))
            {
                <h2>Please Sign Up <small>It's free and always will be.</small></h2>
                <hr class="colorgraph">
                <div class="col-md-12"><span class="error-message">@ViewBag.UserExistError</span></div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-lg", @placeholder = "First Name" })
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-lg", placeholder = "Last Name" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { type = "number", @class = "form-control input-lg", placeholder = "Phone Number" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control input-lg", placeholder = "Address" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-lg", placeholder = "Email Address" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error-message" })
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control input-lg", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error-message" })
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.ConfirmPassword, new { type = "password", @class = "form-control input-lg", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error-message" })
                        </div>
                    </div>
                    <div class="col-md-12"><span class="error-message">@ViewBag.Error</span></div>
                </div>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                </div>
            }
        </div>
    </div>
</div>
